@model Doggis.ViewModel.ErrorViewModel
@{ 
    Layout = null;
}


<!DOCTYPE html>
<html>


<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>404 | Bootstrap Based Admin Template - Material Design</title>
    <!-- Favicon-->
    <link rel="icon" href="~/Content/favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    @Styles.Render("~/Content/plugins/bootstrap/css/bootstrap.css")

    <!-- Waves Effect Css -->
    @Styles.Render("~/Content/plugins/node-waves/waves.css")

    <!-- Custom Css -->
    @Styles.Render("~/Content/css/style.css")
</head>

<body class="four-zero-four">
    <div class="four-zero-four-container">
        <div class="error-code">404</div>
        <div class="error-message">Página não encontrada</div>
        <div class="button-place">
            <a href="@Url.Action("Index", "Home")" class="btn btn-default btn-lg waves-effect">Ir para página inicial</a>
        </div>
    </div>

    <!-- Jquery Core Js -->
    @Scripts.Render("~/Content/plugins/jquery/jquery.min.js")

    <!-- Bootstrap Core Js -->
    @Scripts.Render("~/Content/plugins/bootstrap/js/bootstrap.js")

    <!-- Waves Effect Plugin Js -->
    @Scripts.Render("~/Content/plugins/node-waves/waves.js")
</body>

</html>