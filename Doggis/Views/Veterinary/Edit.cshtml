@model Doggis.ViewModel.EditVeterinaryViewModel
@{
    ViewBag.Title = "Editar Veterinário";
}

@Styles.Render("~/Content/plugins/multi-select/css/multi-select.css")
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Editar
                </h2>
            </div>
            <div class="body">
                @using (Html.BeginForm())
                {
                    <div class="row clearfix">
                        <div class="col-md-10">
                            <b>Nome</b>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <b>Status</b>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="checkbox" name="Status" id="Status" checked="@Model.Status" class="filled-in chk-col-light-green" />
                                    <label for="Status">Ativo</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-md-4">
                            <b>RG</b>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.Identification, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <b>CPF</b>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.NationalInsuranceNumber, new { @class = "form-control " })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <b>Número Conselho de Veterinária</b>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.CouncilNumber, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-md-6">
                            <b>Horário de Entrada</b>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.EntryTime, new { @class = "form-control time24" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <b>Horário de Saída</b>
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.TextBoxFor(m => m.DepartureTime, new { @class = "form-control time24" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="body">
                        <select id="optgroup" class="ms" multiple="multiple">
                            @{
                                foreach (var item in Model.AllowedSpecies)
                                {
                                    <option value="@item.Key" selected>@item.Value</option>
                                }
                                foreach (var item in ViewBag.NotUsedSpecies)
                                {
                                    <option value="@item.Key">@item.Value</option>
                                }
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg m-t-15 waves-effect">Salvar</button>
                }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Content/plugins/multi-select/js/jquery.multi-select.js")
<script>
    $(document).ready(function () {
        $('#optgroup').multiSelect({ selectableOptgroup: true });
    });
</script>